
@{
    ViewBag.Title = "Play";
}

@section Styles {
    @Styles.Render("~/Content/play")
}

<div id="play-container">
    <div id="play-top">
        <h1>@Model.Title</h1>
        <p>by @Model.Author</p>
        <button class="btn btn-info">Game Info</button>
        <button class="btn btn-danger">Reset</button>
        @if (Model.CanEdit)
        {
            <a href="/Play/edit" button class="btn btn-primary">Edit</a>
        }
        <button class="btn btn-primary">Edit Copy</button>
        @*@Html.ActionLink("test", "SaveNewGame", "Content")*@


    </div>
    <div id="play-content">
        <iframe id="play-sandbox" src="/Play/Sandbox" sandbox="allow-scripts"></iframe>
    </div>
    <p>@Model.Description</p>
</div>

@section Scripts {
    <script>
        (function () {
            let gameId = @Model.GameId;

            let sandboxElement = document.getElementById("play-sandbox");

            async function onEngineStart() {
                console.log("engine start");
                let res = await fetch("/Content/GetFileNames?gameId=" + gameId);
                let files = await res.json();

                sandboxElement.contentWindow.postMessage({ type: "setMode", play: true }, "*");
                files.forEach((file) => {
                    let url = "/Content/Game/" + gameId + "/" + file;
                    sandboxElement.contentWindow.postMessage({ type: "setFile", file: file, url: url }, "*");
                });
            }

            window.addEventListener("message", function (event) {
                let msg = event.data;
                if (msg.type == "engineReady") {
                    onEngineStart();
                }
            });
        })();
    </script>
}
